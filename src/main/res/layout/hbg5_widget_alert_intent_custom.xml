<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9000"
    tools:parentTag="android.widget.FrameLayout">

    <priv.liten.hbg5_widget.bin.layout.HBG5LinearLayout
        style="@style/HBG5.Theme.Base.AlertContentLayout"
        android:id="@+id/alert_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/hbg5_alert_margin"
        android:layout_marginEnd="@dimen/hbg5_alert_margin"
        android:orientation="vertical"
        app:v5Touchable="true">

        <!-- Title -->
        <priv.liten.hbg5_widget.bin.text.HBG5TextView
            style="@style/HBG5.Theme.Base.AlertTitleView"
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:v5TextAlignmentVertical="center"
            app:v5TextAlignmentHorizontal="center"
            app:v5Padding="8dp"
            tools:v5Text="標題"/>

        <!-- Content -->
        <priv.liten.hbg5_widget.bin.layout.HBG5ScrollLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="360dp">

            <priv.liten.hbg5_widget.bin.text.HBG5TextView
                style="@style/HBG5.Theme.Base.AlertTextView"
                android:id="@+id/text_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="72dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:gravity="start|center_vertical"/>

        </priv.liten.hbg5_widget.bin.layout.HBG5ScrollLayout>

        <!-- OptionLayout -->
        <priv.liten.hbg5_widget.bin.layout.HBG5LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:v5DividerSize="1dp"
            app:v5DividerColor="@color/hbg5_silver">

            <priv.liten.hbg5_widget.bin.button.HBG5Button
                style="@style/HBG5.Theme.Base.AlertButton"
                android:id="@+id/button_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:v5Text="BUTTON 1"/>

            <priv.liten.hbg5_widget.bin.button.HBG5Button
                style="@style/HBG5.Theme.Base.AlertButton"
                android:id="@+id/button_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:v5Text="BUTTON 2"/>

            <priv.liten.hbg5_widget.bin.button.HBG5Button
                style="@style/HBG5.Theme.Base.AlertButton"
                android:id="@+id/button_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:v5Text="BUTTON 3"/>

        </priv.liten.hbg5_widget.bin.layout.HBG5LinearLayout>

    </priv.liten.hbg5_widget.bin.layout.HBG5LinearLayout>


</merge>