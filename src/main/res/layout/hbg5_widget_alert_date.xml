<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9000"
    tools:parentTag="android.widget.FrameLayout">

    <priv.liten.hbg5_widget.bin.layout.HBG5LinearLayout
        android:id="@+id/alert_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/hbg5_alert_margin"
        android:layout_marginEnd="@dimen/hbg5_alert_margin"
        android:orientation="vertical"
        app:v5Touchable="true"
        app:v5BackgroundRadius="8dp"
        app:v5BackgroundColor="#eee">

        <priv.liten.hbg5_widget.bin.image.HBG5ImageView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            app:v5BackgroundColor="@color/hbg5_dark"
            app:v5BackgroundRadiusLT="8dp"
            app:v5BackgroundRadiusRT="8dp"/>
        <!--todo hbg-->
        <priv.liten.hbg5_widget.bin.text.HBG5TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:v5BackgroundColor="@color/hbg5_dark"
            app:v5Visibility="gone"
            app:v5TextSize="@dimen/hbg5_text_size_normal"
            app:v5TextColor="@color/hbg5_white"
            app:v5TextAlignmentHorizontal="center"
            tools:v5Visibility="visible"
            tools:v5Text="{ 你的時間 }"/>

        <DatePicker
            android:id="@+id/picker_date"
            android:theme="@style/HBG5.Theme.Base.DatePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:minDate="01/01/2000"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/hbg5_silver"/>

        <!-- OptionLayout -->
        <priv.liten.hbg5_widget.bin.layout.HBG5LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:v5DividerSize="1dp"
            app:v5DividerColor="@color/hbg5_silver">

            <priv.liten.hbg5_widget.bin.button.HBG5Button
                style="@style/HBG5.Theme.Base.AlertButton"
                android:id="@+id/button_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:v5Text="@string/hbg5_widget_n_cancel"/>

            <priv.liten.hbg5_widget.bin.button.HBG5Button
                style="@style/HBG5.Theme.Base.AlertButton"
                android:id="@+id/button_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:v5Text="@string/hbg5_widget_n_confirm"/>

        </priv.liten.hbg5_widget.bin.layout.HBG5LinearLayout>

    </priv.liten.hbg5_widget.bin.layout.HBG5LinearLayout>

</merge>