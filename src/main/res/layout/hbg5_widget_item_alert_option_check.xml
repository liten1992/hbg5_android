<?xml version="1.0" encoding="utf-8"?>
<priv.liten.hbg5_widget.bin.layout.HBG5LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="12dp"
    android:paddingEnd="4dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:orientation="horizontal">

    <priv.liten.hbg5_widget.bin.image.HBG5ImageButton
        android:id="@+id/button_check"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:layout_gravity="start|center_vertical"
        android:padding="4dp"
        app:v5Checkable="true"
        app:v5Image="@drawable/hbg5_light_ic_done"
        app:v5ImageChecked="@drawable/hbg5_dark_ic_done"
        app:v5BackgroundRadius="fill"
        app:v5BackgroundBorderSize="2dp"
        app:v5BackgroundBorderColor="@color/hbg5_iron"
        app:v5BackgroundBorderColorPressed="@null"
        app:v5BackgroundBorderColorChecked="@color/hbg5_iron"
        app:v5BackgroundColor="@color/hbg5_clear"
        app:v5BackgroundColorPressed="@null"
        app:v5BackgroundColorChecked="@color/hbg5_iron"/>

    <priv.liten.hbg5_widget.bin.text.HBG5TextView
        style="@style/HBG5.Theme.Base.AlertButton"
        android:id="@+id/text_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLines="1"
        android:ellipsize="end"
        app:v5Touchable="false"
        app:v5TextColor="@color/hbg5_iron"
        app:v5TextAlignmentHorizontal="start"
        tools:v5Text="測試項目"/>

</priv.liten.hbg5_widget.bin.layout.HBG5LinearLayout>

