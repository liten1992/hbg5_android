<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9000"
    tools:parentTag="android.widget.FrameLayout">

    <priv.liten.hbg5_widget.bin.layout.HBG5LinearLayout
        android:id="@+id/alert_parent"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:v5Touchable="true">

        <!-- Content -->
        <priv.liten.hbg5_widget.bin.list.HBG5ListView
            style="@style/HBG5.Theme.Base.AlertContentLayout"
            android:id="@+id/list_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:minHeight="32dp"
            android:maxHeight="360dp"
            app:v5ListLayoutType="linear"
            app:v5ListDividerColor="@color/hbg5_silver"
            app:v5ListDividerMidSize="1dp"
            app:v5ListHint=""
            tools:itemCount="5"
            tools:listitem="@layout/hbg5_widget_item_alert_enum"/>

    </priv.liten.hbg5_widget.bin.layout.HBG5LinearLayout>


</merge>