<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:v5BackgroundColor="#9000"
    tools:parentTag="priv.liten.hbg5_widget.bin.layout.HBG5FrameLayout">

    <priv.liten.hbg5_widget.bin.layout.HBG5LinearLayout
        style="@style/HBG5.Theme.Base.AlertContentLayout"
        android:id="@+id/alert_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/hbg5_alert_margin"
        android:layout_marginEnd="@dimen/hbg5_alert_margin"
        android:layout_marginBottom="@dimen/hbg5_alert_margin"
        android:orientation="vertical"
        app:v5Touchable="true">

        <!-- Title -->
        <priv.liten.hbg5_widget.bin.text.HBG5TextView
            style="@style/HBG5.Theme.Base.AlertTitleView"
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:v5Text="第一個城市"/>

        <!-- Content -->
        <priv.liten.hbg5_widget.bin.layout.HBG5LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <priv.liten.hbg5_widget.bin.layout.HBG5ScrollLayout
                android:id="@+id/layout_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="360dp">

                <priv.liten.hbg5_widget.bin.text.HBG5TextView
                    style="@style/HBG5.Theme.Base.AlertTextView"
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    tools:v5Text="目前考古发现人类最早的城市是两河流域中下游公元前4500年时代的苏美尔文化时期"/>

            </priv.liten.hbg5_widget.bin.layout.HBG5ScrollLayout>

            <!-- Input -->
            <priv.liten.hbg5_widget.bin.text.HBG5TextInput
                style="@style/HBG5.Theme.Base.AlertTextInput"
                android:id="@+id/input_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:v5Visibility="gone"/>

            <priv.liten.hbg5_widget.bin.text.HBG5TextEditor
                style="@style/HBG5.Theme.Base.AlertTextEditor"
                android:id="@+id/editor_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:v5TextAlignmentVertical="top"
                app:v5Visibility="gone"/>

        </priv.liten.hbg5_widget.bin.layout.HBG5LinearLayout>


        <!-- OptionLayout -->
        <priv.liten.hbg5_widget.bin.layout.HBG5LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:v5DividerSize="1dp"
            app:v5DividerColor="@color/hbg5_silver">

            <priv.liten.hbg5_widget.bin.button.HBG5Button
                style="@style/HBG5.Theme.Base.AlertButton"
                android:id="@+id/button_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:v5Text="@string/hbg5_widget_n_cancel"/>

            <priv.liten.hbg5_widget.bin.button.HBG5Button
                style="@style/HBG5.Theme.Base.AlertButton"
                android:id="@+id/button_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:v5Text="@string/hbg5_widget_n_confirm"/>

        </priv.liten.hbg5_widget.bin.layout.HBG5LinearLayout>

    </priv.liten.hbg5_widget.bin.layout.HBG5LinearLayout>

</merge>